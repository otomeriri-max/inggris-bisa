<body>
  <header>
    <h1>Inggris Bisa</h1>
    <p>Belajar Inggris pelan-pelan, ga sok pinter</p>
  </header>  <main>
    <div class="card">
      <h2>Kata Hari Ini</h2>
      <div class="word" id="word">Hello</div>
      <div class="meaning" id="meaning">Halo</div>
      <button onclick="nextWord()">Ganti Kata</button>
    </div><div class="card">
  <h2>Kalimat Contoh</h2>
  <p id="sentence">Hello, how are you?</p>
  <p><i>Halo, apa kabar?</i></p>
</div>

  </main>  <script>
    const words = [
      { word: "Hello", meaning: "Halo", sentence: "Hello, how are you?" },
      { word: "Thank you", meaning: "Terima kasih", sentence: "Thank you for your help." },
      { word: "Sorry", meaning: "Maaf", sentence: "Sorry, I'm late." },
      { word: "Please", meaning: "Tolong", sentence: "Please help me." }
    ];

    let index = 0;

    function nextWord() {
      index = (index + 1) % words.length;
      document.getElementById("word").innerText = words[index].word;
      document.getElementById("meaning").innerText = words[index].meaning;
      document.getElementById("sentence").innerText = words[index].sentence;
    }
  </script></body>
